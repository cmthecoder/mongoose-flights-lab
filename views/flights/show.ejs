<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>FlightNo: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>

    <div>Meal:</div>
      <ul>
        <% flight.meal.forEach(mealServed => { %>
          <li><%= mealServed.name %></li>
        <% }) %>
      </ul>
    <%# end cast list %>
  </section>
	<%# add to cast form below this comment %>
  <form id="add-per-to-meal" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Meal</button>
  </form>





  </section>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?">
    <label for="price-select">Price:</label>
    <select name="price" id="price-select">
      <option value="80">$80</option>
      <option value="220">$220</option>
      <option value="98">$98</option>
      <option value="127">$127</option>
      <option value="98" selected>$98</option>
    </select>
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
            <td>
              <form action="/flights/<%= flight._id %>/tickets/<%=ticket.id%>?_method=DELETE" method="POST">
                <button>X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <h3>No Flights Yet</h3>
    <% } %>
</main>
  
<%- include('../partials/footer') %>